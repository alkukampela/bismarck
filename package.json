{
  "name": "bismarck",
  "version": "1.0.0",
  "description": "Bismarck game",
  "repository": {
    "type": "git",
    "url": "git+htttp://github.com/alkukampela/bismarck.git"
  },
  "engines": {
    "node": "13.12.x",
    "npm": "6.14.x"
  },
  "main": "dist/app.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon",
    "start:heroku": "NODE_ENV=production heroku local",
    "build": "npm run build:server && npm run build:ui",
    "build:server": "rm tsconfig.tsbuildinfo; tsc",
    "build:ui": "rm -rf dist/public && cd src/bismarck-web && rm -rf dist && npm install && npm run build --prod && cp -r dist ../../dist/public",
    "test": "jest",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "src/bismarck-web"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "RK",
  "license": "MIT",
  "devDependencies": {
    "@types/bidirectional-map": "^1.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.4",
    "@types/ioredis": "^4.16.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.0",
    "@types/uuid": "^7.0.3",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.3.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "bidirectional-map": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fisher-yates": "^1.0.3",
    "http-status-codes": "^1.4.0",
    "ioredis": "^4.16.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "uuid": "^8.0.0",
    "uuid-encoder": "^1.2.0",
    "ws": "^7.2.5"
  }
}

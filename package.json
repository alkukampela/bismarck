{
  "name": "bismarck",
  "version": "1.0.0",
  "description": "Bismarck game",
  "repository": {
    "type": "git",
    "url": "git+htttp://github.com/alkukampela/bismarck.git"
  },
  "engines": {
    "node": "16.x",
    "npm": "7.x"
  },
  "main": "dist/app.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon",
    "start:heroku": "NODE_ENV=production heroku local",
    "build": "npm run build:server && npm run build:ui",
    "build:server": "rm -f tsconfig.tsbuildinfo; tsc",
    "build:ui": "rm -rf dist/public && cd src/bismarck-web && rm -rf dist && npm install && npm run build --prod && cp -r dist ../../dist/public",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "src/bismarck-web"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "RK",
  "license": "MIT",
  "devDependencies": {
    "@types/bidirectional-map": "^1.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.2",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.3",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "bidirectional-map": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "fisher-yates": "^1.0.3",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "ioredis": "^4.28.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "uuid": "^8.3.2",
    "ws": "^7.5.6"
  }
}
